script(src='/javascripts/materialize.js')
script.
    $(document).ready(function () {
        //Aggiunta tooltip
        $('.tooltipped').tooltip();
        //Aggiunta sidenav mobile
        $('.sidenav').sidenav({
                closeOnClick: true
            }
        );
        //Aggiunta modal
        $('.modal').modal();
        //Aggiunta opzioni
        $('select').formSelect();
        //Aggiunta tabs
        $('.tabs').tabs();
        //Aggiunta datepicker
        $('.datepicker').datepicker({
            format: 'dd/mm/yyyy',
            firstDay: 1,
            showClearBtn: true
        });
        //settaggio impostazoni attuali
        document.getElementById('maxg-slider').value = #{userSettings.massimaleGiornaliero};
        document.getElementById('notm-slider').value = #{userSettings.sogliaNotificaMovimenti};
        if (userSettings.notificaMassimaleGiornaliero == 1) {
            document.getElementById('mgck').checked;
        }
    });
    let slider = document.getElementById('maxg-slider');
    noUiSlider.create(slider, {
        start: [20, 80],
        connect: true,
        step: 100,
        orientation: 'horizontal', // 'horizontal' o 'vertical'
        range: {
            'min': 0,
            'max': 1500
        },
        format: wNumb({
            decimals: 0
        })
    });